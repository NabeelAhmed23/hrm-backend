# ==============================================================================
# HR COMPLIANCE SAAS - ENVIRONMENT CONFIGURATION
# ==============================================================================

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/hr_compliance_db"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production-min-32-characters"
JWT_EXPIRES_IN="7d"

# Server
PORT=3005
APP_URL=http://localhost:3005

# ==============================================================================
# DOCUMENT STORAGE CONFIGURATION
# ==============================================================================

# Storage Provider Selection
# Options: "local" (for development) or "s3" (for production)
STORAGE_PROVIDER=local

# AWS S3 Configuration (Production)
# Uncomment for production S3 storage
# AWS_ACCESS_KEY_ID=your-aws-access-key-id
# AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET_NAME=your-s3-bucket-name

# ==============================================================================
# CRON JOB CONFIGURATION
# ==============================================================================

# Document Expiry Job
DOCUMENT_EXPIRY_CRON="0 9 * * *"
DOCUMENT_EXPIRY_WARNING_DAYS="30,14,7,1"
CRON_JOBS_ENABLED=true
TZ=UTC

# ==============================================================================
# EMAIL SERVICE CONFIGURATION
# ==============================================================================

# Email Provider Selection
# Options: "smtp" (development), "sendgrid" (production), "ses" (future)
EMAIL_PROVIDER=smtp

# ==============================================================================
# SMTP CONFIGURATION (Development & Custom SMTP Servers)
# ==============================================================================

# SMTP Server Settings
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_SECURE=false

# SMTP Authentication (leave empty for local testing without auth)
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# Default sender information
SMTP_FROM=noreply@yourcompany.com
SMTP_FROM_NAME=HR Compliance System

# ==============================================================================
# GMAIL SMTP CONFIGURATION (Alternative Development Setup)
# ==============================================================================
# Use Gmail SMTP for development (requires App Password)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# ==============================================================================
# SENDGRID CONFIGURATION (Production)
# ==============================================================================

# SendGrid API Key (required for SendGrid provider)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# SendGrid Sender Settings
SENDGRID_FROM=noreply@yourcompany.com
SENDGRID_FROM_NAME=HR Compliance System

# ==============================================================================
# AWS SES CONFIGURATION (Future Implementation)
# ==============================================================================

# AWS Credentials (when SES adapter is implemented)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_SES_FROM=noreply@yourcompany.com

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================

# Environment
NODE_ENV=development

# Base URL for email links (used in templates)
APP_BASE_URL=http://localhost:3000

# ==============================================================================
# EXAMPLE CONFIGURATIONS FOR DIFFERENT ENVIRONMENTS
# ==============================================================================

# LOCAL DEVELOPMENT WITH ETHEREAL EMAIL (Testing)
# EMAIL_PROVIDER=smtp
# SMTP_HOST=smtp.ethereal.email
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=test_user_from_ethereal
# SMTP_PASS=test_pass_from_ethereal

# PRODUCTION WITH SENDGRID
# EMAIL_PROVIDER=sendgrid
# SENDGRID_API_KEY=SG.real_sendgrid_api_key
# SENDGRID_FROM=noreply@yourproductiondomain.com
# SENDGRID_FROM_NAME=Your Company Name
# NODE_ENV=production

# ==============================================================================
# SECURITY NOTES
# ==============================================================================

# 1. Never commit this file with real credentials to version control
# 2. Use environment-specific .env files (.env.development, .env.production)
# 3. For Gmail SMTP, use App Passwords, not your regular Gmail password
# 4. SendGrid API keys should have minimal required permissions
# 5. Regularly rotate API keys and passwords
# 6. Use different sender addresses for different environments

# ==============================================================================
# SETUP INSTRUCTIONS
# ==============================================================================

# FOR LOCAL DEVELOPMENT:
# 1. Copy this file to .env
# 2. Choose EMAIL_PROVIDER=smtp
# 3. Either:
#    a) Use local SMTP server (SMTP_HOST=localhost, no auth)
#    b) Create Ethereal Email test account via SMTPAdapter.createTestAccount()
#    c) Use Gmail with App Password

# FOR PRODUCTION:
# 1. Set EMAIL_PROVIDER=sendgrid
# 2. Sign up for SendGrid account
# 3. Create API key with Mail Send permissions
# 4. Verify sender identity in SendGrid
# 5. Set SENDGRID_API_KEY and SENDGRID_FROM

# FOR TESTING EMAIL TEMPLATES:
# 1. Use EMAIL_PROVIDER=smtp with Ethereal Email
# 2. Preview URLs will be logged to console
# 3. Templates can be tested without real email delivery